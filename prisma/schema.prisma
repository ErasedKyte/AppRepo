// src/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SarfForm {
  id                      Int        @id @default(autoincrement())
  submittedAt             DateTime   @default(now())
  status                  String     @default("pending")
  ProjectName             String
  NominalSiteId           String
  NominalSiteName         String
  RoadName                String
  BlockNumber             Int
  Longitude               Float
  Latitude                Float
  SearchRadius            Int
  CellType                String
  NoOfAntenna1            Int
  AntennaSize1            String
  RequiredAntennaHeight1  Int
  AntennaAzimuth1         Float
  NoOfAntenna2            Int
  AntennaSize2            String
  RequiredAntennaHeight2  Int
  AntennaAzimuth2         Float
  NoOfAntenna3            Int
  AntennaSize3            String
  RequiredAntennaHeight3  Int
  AntennaAzimuth3         Float
  NoOfAntenna4            Int?
  AntennaSize4            String?
  RequiredAntennaHeight4  Int?
  AntennaAzimuth4         Float?
}
